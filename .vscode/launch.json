    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch localhost:3000 in Firefox",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: dev (server)",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/server"
        }
    ]
}